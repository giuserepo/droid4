<!-- Stretch some columns -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabfattura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="1"
    >

    <TableRow>
        <TextView
            android:id="@+id/intestazione"
            android:padding="3dip"
            android:layout_width="100dp" 
            />
        <TextView
            android:id="@+id/azienda"
            android:padding="3dip" />        

    </TableRow>
    <View
        android:layout_height="1dip"
        android:background="#FF909090" />
    

        <TextView
			android:id="@+id/descrizione"
            android:padding="3dip"
	        android:textSize="10dip"
	        android:textStyle="bold"/>            
    <View
        android:layout_height="2dip"
        android:background="#FF909090" />
    
    <TableRow>
        <TextView
            android:id="@+id/onorari"
            android:padding="3dip" />
     </TableRow>
    <TableRow>
         <TextView
            android:id="@+id/inarcassa"
            android:padding="3dip" />
      </TableRow>
     <TableRow>
         <TextView
            android:id="@+id/imponibile"
            android:padding="3dip" />  
    </TableRow>
         <TableRow>   
        <TextView
            android:id="@+id/iva"
            android:padding="3dip" />                  
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />


    <TableRow>
        <TextView
            android:id="@+id/totale_fattura"
            android:padding="3dip" />
    </TableRow>
    <TableRow>   
       <TextView
            android:id="@+id/ra"
            android:padding="3dip" />    
        
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow>
        <TextView
            android:id="@+id/totale_pagare"
            android:padding="3dip" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/condizioni"
            android:padding="3dip" />
    </TableRow>    
</TableLayout>
